{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // compile away optional-chaining-operator
    // node support table: https://node.green/#ES2020-features-optional-chaining-operator-----
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}